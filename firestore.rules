rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read and write all documents in all collections.
    // This grants full access to all data for anyone who is logged in.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Special rule for user_activity to ensure users only modify their own activity,
    // even with general full access, this is a good practice.
    match /user_activity/{userEmail} {
      allow read, write: if request.auth != null && request.auth.token.email == userEmail;
    }
  }
}