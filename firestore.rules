rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to any document only if the user is signed in.
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Specific rules for boys collections
    match /{section}_boys/{boyId} {
      allow create, update, delete: if request.auth != null;
    }

    // Specific rules for audit_logs collections
    match /{section}_audit_logs/{logId} {
      allow create: if request.auth != null; // Allow creation
      allow update, delete: if false; // Explicitly deny updates and deletes
    }

    // Specific rules for settings collection
    match /settings/{sectionId} {
      allow read, write: if request.auth != null;
    }

    // Specific rules for user_activity collection
    match /user_activity/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}