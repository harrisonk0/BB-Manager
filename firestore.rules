rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for Company Section Boys
    match /company_boys/{boyId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Rules for Junior Section Boys
    match /junior_boys/{boyId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Rules for Company Section Audit Logs
    match /company_audit_logs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Explicitly deny updates and deletes
    }

    // Rules for Junior Section Audit Logs
    match /junior_audit_logs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Explicitly deny updates and deletes
    }

    // Rules for Settings
    match /settings/{sectionId} {
      allow read, write: if request.auth != null;
    }

    // Rules for User Activity
    match /user_activity/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}